// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // User interface
  "theme": "Colorizer Pro",
  "icon_theme": "Symbols Icon Theme",
  "cursor_shape": "block",

  // Editor
  "tab_size": 2,
  "buffer_font_size": 14,
  "buffer_font_features": {
    "calt": false
  },
  "relative_line_numbers": true,
  "vim_mode": true,

  // Tabs
  "tabs": {
    "file_icons": true
  },

  // Toolbar
  "toolbar": {
    "breadcrumbs": false,
    "code_actions": true
  },

  // Minimap
  "minimap": {
    "show": "auto"
  },

  // Project panel
  "project_panel": {
    "indent_size": 10.0,
    "entry_spacing": "standard",
    "dock": "right",
    "default_width": 300.0,
    "indent_guides": {
      "show": "never"
    }
  },

  // Git
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  // Workspace persistence
  "restore_on_startup": "none",
  "restore_on_file_reopen": false,

  // Predictions
  "edit_predictions": {
    "mode": "subtle"
  },

  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
